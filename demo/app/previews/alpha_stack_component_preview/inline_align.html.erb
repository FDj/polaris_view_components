      <%= polaris_placeholder(height: "48px", width: "320px", label: "Start") %>
      <%= polaris_placeholder(height: "48px", width: "320px") %>
      <%= polaris_placeholder(height: "48px", width: "320px") %>
    <% end %>

    <%= polaris_divider %>

    <%= polaris_alpha_stack(gap: "025", inline_align: :center) do %>
      <%= polaris_placeholder(height: "48px", width: "320px", label: "Center") %>
      <%= polaris_placeholder(height: "48px", width: "320px") %>
      <%= polaris_placeholder(height: "48px", width: "320px") %>
    <% end %>

    <%= polaris_divider %>

    <%= polaris_alpha_stack(gap: "025", inline_align: :end) do %>
