<%= form_with(model: upload, builder: Polaris::FormBuilder) do |form| %>
  <%= polaris_form_layout do |form_layout| %>
    <% form_layout.item do %>
      <%= form.polaris_dropzone :file, multiple: false %>
    <% end %>
    <% form_layout.item do %>
      <%= polaris_button(submit: true) { "Submit" } %>
    <% end %>
  <% end %>
<% end %>

<%= polaris_spacer(vertical: :base) %>

<%= form_with(model: upload, builder: Polaris::FormBuilder) do |form| %>
  <%= polaris_form_layout do |form_layout| %>
    <% form_layout.item do %>
      <%# With direct upload in ActiveStorage %>
      <%= form.polaris_dropzone :file, multiple: false, direct_upload: true %>
    <% end %>
    <% form_layout.item do %>
      <%= polaris_button(submit: true) { "Submit" } %>
    <% end %>
  <% end %>
<% end %>
